rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regras para a coleção de registros de temperatura
    match /registros/{registroId} {
      // Permite que qualquer usuário autenticado crie, leia, atualize e delete registros.
      allow read, write: if request.auth != null;
    }

    // Regras para a coleção de usuários
    match /users/{userId} {
      // Permite a leitura de perfis de usuário para qualquer usuário autenticado.
      allow read: if request.auth != null;
      
      // Permite a escrita (criação, edição, exclusão) apenas se o usuário fazendo a requisição for um admin.
      // A função 'get' busca o documento do usuário que está fazendo a requisição e verifica seu campo 'role'.
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}