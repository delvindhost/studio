
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuth() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // Allow unauthenticated reads only on the 'matricula' field for login purposes.
      // Authenticated users can read the whole document.
      allow read: if (isAuth()) || (request.auth == null && 'matricula' in resource.data && request.query.offset == null);
      allow create: if request.auth.uid == userId || isAdmin();
      allow update: if isAdmin() || request.auth.uid == userId;
      allow delete: if isAdmin();
    }

    match /registros/{registroId} {
      allow read, create: if isAuth();
      allow update, delete: if isAdmin() || (isAuth() && 'delete_records' in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions);
    }
  }
}
