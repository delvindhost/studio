
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite que usuários autenticados leiam e escrevam na coleção 'registros'
    match /registros/{registroId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth != null; // Adicionado para futuras funcionalidades de edição/exclusão
    }

    // Regras para a coleção de usuários
    match /users/{userId} {
      // Qualquer usuário autenticado pode ler os perfis (necessário para a página de usuários)
      allow read: if request.auth != null;
      // Apenas o próprio usuário pode criar ou atualizar seu perfil
      allow create, update: if request.auth != null && request.auth.uid == userId;
       // Apenas um admin (gerenciado via backend logic) pode deletar
      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
